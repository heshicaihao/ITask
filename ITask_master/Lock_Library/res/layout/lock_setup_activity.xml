<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gesture_background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/gesturepwd_setting_preview"
        android:layout_width="@dimen/DIMEN_80PX"
        android:layout_height="@dimen/DIMEN_80PX"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_60PX"
        android:background="@drawable/gesture_create_grid_bg"
        android:orientation="vertical"
        android:padding="@dimen/DIMEN_10PX" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_12PX" >

            <View
                android:id="@+id/gesturepwd_setting_preview_0"
                android:layout_width="@dimen/DIMEN_12PX"
                android:layout_height="@dimen/DIMEN_12PX"
                android:background="@drawable/trans" />

            <View
                android:id="@+id/gesturepwd_setting_preview_1"
                android:layout_width="@dimen/DIMEN_12PX"
                android:layout_height="@dimen/DIMEN_12PX"
                android:layout_marginLeft="@dimen/DIMEN_12PX"
                android:background="@drawable/trans" />

            <View
                android:id="@+id/gesturepwd_setting_preview_2"
                android:layout_width="@dimen/DIMEN_12PX"
                android:layout_height="@dimen/DIMEN_12PX"
                android:layout_marginLeft="@dimen/DIMEN_12PX"
                android:background="@drawable/trans" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_12PX"
            android:layout_marginTop="@dimen/DIMEN_12PX" >

            <View
                android:id="@+id/gesturepwd_setting_preview_3"
                android:layout_width="@dimen/DIMEN_12PX"
                android:layout_height="@dimen/DIMEN_12PX"
                android:background="@drawable/trans" />

            <View
                android:id="@+id/gesturepwd_setting_preview_4"
                android:layout_width="@dimen/DIMEN_12PX"
                android:layout_height="@dimen/DIMEN_12PX"
                android:layout_marginLeft="@dimen/DIMEN_12PX"
                android:background="@drawable/trans" />

            <View
                android:id="@+id/gesturepwd_setting_preview_5"
                android:layout_width="@dimen/DIMEN_12PX"
                android:layout_height="@dimen/DIMEN_12PX"
                android:layout_marginLeft="@dimen/DIMEN_12PX"
                android:background="@drawable/trans" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/DIMEN_12PX"
            android:layout_marginTop="@dimen/DIMEN_12PX" >

            <View
                android:id="@+id/gesturepwd_setting_preview_6"
                android:layout_width="@dimen/DIMEN_12PX"
                android:layout_height="@dimen/DIMEN_12PX"
                android:background="@drawable/trans" />

            <View
                android:id="@+id/gesturepwd_setting_preview_7"
                android:layout_width="@dimen/DIMEN_12PX"
                android:layout_height="@dimen/DIMEN_12PX"
                android:layout_marginLeft="@dimen/DIMEN_12PX"
                android:background="@drawable/trans" />

            <View
                android:id="@+id/gesturepwd_setting_preview_8"
                android:layout_width="@dimen/DIMEN_12PX"
                android:layout_height="@dimen/DIMEN_12PX"
                android:layout_marginLeft="@dimen/DIMEN_12PX"
                android:background="@drawable/trans" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/gesturepwd_create_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_40PX"
        android:gravity="center_horizontal"
        android:shadowColor="#b3000000"
        android:shadowRadius="1.0"
        android:text="@string/draw_lock"
        android:textColor="@android:color/white"
        android:textSize="16.0sp" />

    <com.xxdc.lib.gusturelock.LockPatternView
        android:id="@+id/gesturepwd_create_lockview"
        android:layout_width="@dimen/DIMEN_576PX"
        android:layout_height="@dimen/DIMEN_576PX"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_20PX" />

</LinearLayout>
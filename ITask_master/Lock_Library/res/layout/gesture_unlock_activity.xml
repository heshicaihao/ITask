<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gesturepwd_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gesture_background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/gesturepwd_unlock_face"
        android:layout_width="@dimen/DIMEN_160PX"
        android:layout_height="@dimen/DIMEN_160PX"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_100PX"
        android:background="@drawable/card_avatar"
        android:padding="@dimen/DIMEN_8PX"
        android:scaleType="fitXY"
        android:src="@drawable/myphoto" />

    <TextView
        android:id="@+id/gesturepwd_unlock_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_80PX"
        android:layout_marginRight="@dimen/DIMEN_80PX"
        android:layout_marginTop="@dimen/DIMEN_60PX"
        android:gravity="center_horizontal"
        android:shadowColor="#b3ffffff"
        android:shadowRadius="1.0"
        android:text="@string/lockpattern_recording_intro_header"
        android:textColor="@android:color/white"
        android:textSize="16.0sp" />

    <com.xxdc.lib.gusturelock.LockPatternView
        android:id="@+id/gesturepwd_unlock_lockview"
        android:layout_width="@dimen/DIMEN_560PX"
        android:layout_height="@dimen/DIMEN_560PX"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0.0dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_80PX" >

        <TextView
            android:id="@+id/gesturepwd_unlock_forget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:shadowColor="#e0ffffff"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:text="@string/forget_gesture_pwd"
            android:textColor="@android:color/white"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/gesturepwd_login_other"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:shadowColor="#e0ffffff"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:text="@string/login_other_user"
            android:textColor="@android:color/white"
            android:textSize="14.0sp" />
    </LinearLayout>

</LinearLayout>
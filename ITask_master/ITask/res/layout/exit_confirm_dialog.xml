<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogRoot"
    android:layout_width="310dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/common_alert_bg" >

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="提示"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialogText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogTitle"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10.0dip"
        android:text="重录将删除现有语音文件,确定重录吗?"
        android:textSize="16sp" />

 

    <View
        android:id="@+id/dialogDivider2"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/dialogText"
        android:layout_marginTop="10.0dip"
        android:background="@color/gray_nomal" />

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogDivider2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialogLeftBtn"
            android:layout_width="fill_parent"
            android:layout_height="44dip"
            android:layout_weight="1.0"
            android:background="@drawable/common_dialog_btn_left"
            android:gravity="center"
            android:singleLine="true"
            android:text="取消"
            android:textSize="16sp" />

        <View
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/gray_nomal" />

        <TextView
            android:id="@+id/dialogRightBtn"
            android:layout_width="fill_parent"
            android:layout_height="44dip"
            android:layout_weight="1.0"
            android:background="@drawable/common_dialog_btn_right"
            android:gravity="center"
            android:singleLine="true"
            android:text="重录"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/historytask_item_selector"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_10PX"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:paddingBottom="@dimen/DIMEN_2PX"
            android:paddingEnd="@dimen/DIMEN_2PX"
            android:paddingLeft="@dimen/DIMEN_20PX"
            android:paddingRight="@dimen/DIMEN_2PX"
            android:paddingStart="@dimen/DIMEN_20PX"
            android:paddingTop="@dimen/DIMEN_2PX"
            android:singleLine="true"
            android:text="Gary"
            android:textColor="@color/blue1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_feedback_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:paddingBottom="@dimen/DIMEN_10PX"
            android:paddingLeft="@dimen/DIMEN_2PX"
            android:paddingStart="@dimen/DIMEN_2PX"
            android:paddingRight="@dimen/DIMEN_20PX"
            android:paddingEnd="@dimen/DIMEN_20PX"
            android:paddingTop="@dimen/DIMEN_2PX"
            android:singleLine="true"
            android:text="Gary:   2014-01-12 13:00"
            android:textColor="@color/blue1"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="@drawable/line_2" />

    <TextView
        android:id="@+id/tv_feedback_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/DIMEN_10PX"
        android:text="大家已经开完讨论会"
        android:textColor="@color/gray"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ll_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_60PX"
        android:orientation="horizontal"
        android:padding="@dimen/DIMEN_10PX"
        android:textSize="18sp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_feedback_photo"
            android:layout_width="0dp"
            android:layout_height="@dimen/DIMEN_40PX"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/pic_selector"
            android:textSize="18sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_feedback_mic"
            android:layout_width="0dp"
            android:layout_height="@dimen/DIMEN_40PX"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/mic_selector"
            android:textSize="18sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_feedback_fujian"
            android:layout_width="0dp"
            android:layout_height="@dimen/DIMEN_40PX"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/fujian_selector"
            android:textSize="18sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
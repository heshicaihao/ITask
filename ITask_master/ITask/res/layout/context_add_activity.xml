<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/unused"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#54C7FC" >

        <TextView
            android:id="@+id/tv_cancle_context_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DIMEN_40PX"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="@dimen/DIMEN_30PX" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_80PX"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/context_add"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/DIMEN_40PX" />

        <TextView
            android:id="@+id/tv_save_context_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_40PX"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="@dimen/DIMEN_30PX" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/DIMEN_60PX"
        android:layout_marginTop="@dimen/DIMEN_60PX"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/DIMEN_50PX"
            android:layout_marginLeft="@dimen/DIMEN_30PX"
            android:layout_marginRight="@dimen/DIMEN_30PX"
            android:layout_marginTop="@dimen/DIMEN_50PX"
            android:background="#776FB6E0"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/DIMEN_20PX"
                android:text="@string/add_friend"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <LinearLayout style="@style/ll_stytle" >

                <EditText
                    android:id="@+id/et_userName_con_add"
                    style="@style/edit_stytle"
                    android:ems="11" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_find_linkman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_50PX"
                android:layout_marginLeft="@dimen/DIMEN_30PX"
                android:layout_marginRight="@dimen/DIMEN_30PX"
                android:layout_marginTop="@dimen/DIMEN_50PX"
                android:background="#54C7FC"
                android:gravity="center" >

                <TextView
                    style="@style/textview_stytle"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    android:padding="@dimen/DIMEN_5PX"
                    android:text="@string/find"
                    android:textSize="@dimen/DIMEN_40PX" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>